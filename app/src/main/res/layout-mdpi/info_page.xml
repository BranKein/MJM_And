<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_1080_1920">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="400dp"
        android:layout_height="150dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1"
        app:srcCompat="@drawable/infomjm_0" />

    <TextView
        android:id="@id/version"
        android:textSize="15dp"
        android:fontFamily="@font/hobostd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.014"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.99" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="480dp"
        android:layout_height="680dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/infotab1"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:background="@drawable/tab11" />

            <Button
                android:id="@+id/infotab2"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:background="@drawable/tab22" />

            <Button
                android:id="@+id/infotab3"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:background="@drawable/tab32" />

            <Button
                android:id="@+id/infotab4"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:background="@drawable/tab42" />
        </LinearLayout>

        <ScrollView
            android:id="@+id/infotab"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#464646">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/infotitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:fontFamily="@font/nanumsquareroundb"
                    android:text="@string/infotab1title"
                    android:textColor="#FFFFFF"
                    android:textSize="16pt" />

                <TextView
                    android:id="@+id/infotext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="11dp"
                    android:fontFamily="@font/nanumsquareroundb"
                    android:text="@string/infotab1text"
                    android:textColor="#FFFFFF"
                    android:textSize="13pt" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>